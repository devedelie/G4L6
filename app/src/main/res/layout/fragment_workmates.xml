<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_workmates"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.fragments.WorkmatesFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!-- MESSAGE RECYCLER VIEW EMPTY -->
    <TextView
        android:id="@+id/workmates_recycler_view_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/workmates_recycler_view_empty"
        android:textAlignment="center"
        android:layout_margin="@dimen/default_large_margin"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/workmateView_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:padding="@dimen/recyclerView_padding">

    </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</FrameLayout>