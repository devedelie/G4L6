<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_restaurant_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".RestaurantsActivity">


        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".RestaurantsActivity" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
            <ProgressBar
                android:id="@+id/map_loading_animation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/map_loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/map_loading_text"
                android:layout_gravity="center"
                android:layout_below="@+id/map_loading_animation"/>

            </RelativeLayout>

            <!--Import of toolbar-->
            <include
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <!-- 3 BUTTONS AT BOTTOM OF SCREEN -->
            <LinearLayout
                android:id="@+id/activity_mentor_chat_buttons_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <!-- BUTTON MAP VIEW -->
                <ImageButton
                    android:id="@+id/activity_restaurants_mapView_button"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:background="@color/bottom_buttons"
                    android:src="@drawable/ic_mapview_icon"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:tag="10"/>

                <!-- BUTTON LIST VIEW -->
                <ImageButton
                    android:id="@+id/activity_restaurants_listView_button"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:background="@color/bottom_buttons"
                    android:src="@drawable/ic_listview_icon"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:tag="20"/>

                <!-- BUTTON WORKMATES -->
                <ImageButton
                    android:id="@+id/activity_restaurants_workmates_button"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:background="@color/bottom_buttons"
                    android:src="@drawable/ic_workmates_icon"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:tag="30"/>

            </LinearLayout>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <!-- NavigationView (headerLayout + menu)-->
    <com.google.android.material.navigation.NavigationView
        android:background="@color/browser_actions_bg_grey"
        android:id="@+id/drawer_restaurant_activity"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="false"
        app:headerLayout="@layout/activity_main_nav_header"
        app:menu="@menu/activity_main_menu_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>